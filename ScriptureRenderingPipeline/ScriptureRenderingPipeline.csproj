<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AzureFunctionsVersion>v3</AzureFunctionsVersion>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="BTTWriterLib" Version="0.3.0" />
    <PackageReference Include="Microsoft.NET.Sdk.Functions" Version="3.0.9" />
    <PackageReference Include="Microsoft.VisualStudio.Azure.Containers.Tools.Targets" Version="1.9.10" />
    <PackageReference Include="System.Text.Json" Version="4.7.2" />
    <PackageReference Include="USFMToolsSharp" Version="1.5.3" />
    <PackageReference Include="USFMToolsSharp.Linter" Version="0.3.0" />
    <PackageReference Include="USFMToolsSharp.Renderers.Docx" Version="0.8.0" />
    <PackageReference Include="USFMToolsSharp.Renderers.Latex" Version="0.5.0" />
    <PackageReference Include="USFMToolsSharp.Renderers.USFM" Version="0.0.1" />
  </ItemGroup>
  <ItemGroup>
    <None Update="host.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="local.settings.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>